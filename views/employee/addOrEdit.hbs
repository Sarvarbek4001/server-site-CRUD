<h3>{{viewTitle}}</h3>
<form action="/employee" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{employee._id}}">
    <div class="form-group">
        <label for="">Full Name</label>
        <input type="text" value="{{employee.fullName}}" name="fullName" class="form-control" placeholder="Full Name">
        <div class="text-danger">
            {{employee.fullNameError}}
        </div>
    </div>
    <div class="form-group">
            <label for="">Email</label>
            <input type="text" value="{{employee.email}}" name="email" class="form-control" placeholder="Email">
            <div class="text-danger">
            {{employee.emailError}}
        </div>
    </div>
    <div class="form-row mb-4">
        <div class="from-group col-md-6">
            <label for="">Mobile</label>
            <input type="text" value="{{employee.mobile}}" name="mobile" class="form-control" placeholder="Mobile">
        </div>
        <div class="from-group col-md-6">
            <label for="">City</label>
            <input type="text" value="{{employee.city}}" name="city" class="form-control" placeholder="City">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database mx-1 "></i>Submit</button>
        <a href="/employee/list" class="btn btn-secondary">
        <i class="fa fa-list-alt mx-1"></i>View All</a>
    </div>
    
</form>